
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read on stories and chat media
    match /stories/{userId}/{storyId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /chats/{chatId}/{messageId} {
      allow read: if true;
      // In a real app, you'd check if the user is a participant of the chat.
      // This requires a Firestore read, which can be complex in rules.
      // For now, we allow any authenticated user to write to a chat media folder.
      // A more secure rule would be:
      // allow write: if request.auth != null && exists(/databases/$(database)/documents/chats/$(chatId)) && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      allow write: if request.auth != null;
    }
  }
}
